<h1>Appointments Information </h1>

<% @appointments.each do |apt| %>
  <p>Date: <%= apt.appointment_date.strftime("%d/%m/%Y") %></p>
  <p>Doctor name: <%= apt.doctor.name %></p>
  <p>Patient name: <%= apt.patient.name %></p>

  <%= link_to "Show", appointment_path(apt) %> 
  <%= link_to "Edit", edit_appointment_path(apt) %>
  <%= link_to "delete", appointment_path(apt), data: {turbo_method: :delete, turbo_confirm: "Are you sure want to delete ?"} %>
<% end %>
